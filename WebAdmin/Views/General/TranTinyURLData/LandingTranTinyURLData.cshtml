
@using CLL
@model BDO.Core.DataAccessObjects.Models.trantinyurldataEntity
@inject CLL.Localization.LocalizeService SharedLocalizer

@using Microsoft.Extensions.Options
@{
    ViewData["Title"] = "View Tran Tiny U R L Data List";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-footer">
                <h5 class="card-title">@SharedLocalizer.GetLocalizedHtmlString("TRANTINYURLDATAY_LIST")</h5>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <form method="POST" id="frmDTTranTinyURLDatalist" class="my-login-validation" novalidate="" autocomplete="off">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="DTTranTinyURLDatalist" class="table table-striped table-bordered" @*style="width:100%"*@ cellspacing="0">
                                <thead>
                                    <tr>
										<th><label class="labelNormal  " asp-for="tinyurlid"></label></th>
										<th width="200px"><label class="labelNormal  ">Service Name</label></th>
										@* <th><label class="labelNormal  " asp-for="actualurl"></label></th> *@
										 <th><label class="labelNormal  " asp-for="tinyurl"></label></th>
										 @* <th><label class="labelNormal  " asp-for="tinyurlcode"></label></th> *@                                        <th width="180px">@SharedLocalizer.GetLocalizedHtmlString("ACTIONS_BUTTONS")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                </form>
            </div>
            <!-- ./card-body -->
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">

                        <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>


@section Scripts {
    <script>
        $(function () {
             var dt = $("#DTTranTinyURLDatalist").DataTable({
				 "ajax": $.fn.dataTable.json({ url: "/TranTinyURLData/ListTranTinyURLData" }),
				 "buttons": { 
					 "buttons": [ 
						 { 
							 text: '<i class="fas fa-plus-square" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("ADD_NEW_RECORD")', 
							 className: 'btn btn-primary mr-1', 
							 action: function (e, dt, node, config) { 
								 location.href = "/TranTinyURLData/AddTranTinyURLData"; 
							 } 
						 }, 
						 { 
							 extend: 'copy', 
							 text: '<i class="fas fa-copy" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("COPY_LIST")', 
							 className: 'btn btn-info mr-1', 
						 }, 
						 { 
							 extend: 'excel', 
							 text: '<i class="fas fa-file-excel" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("EXCEL_EXPORT")', 
							 className: 'btn btn-info mr-1', 
						 }, 
						 { 
							 extend: 'csv', 
							 text: '<i class="fas fa-file-csv" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("CSV_EXPORT")', 
							 className: 'btn btn-info mr-1', 
						 }, 
						 { 
							 extend: 'pdf', 
							 text: '<i class="fa fa-print" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("PRINT")', 
							 className: 'btn btn-info mr-1', 
						 }] 
				 }, 
				 columnDefs: [ 
					 { targets: 0, "visible": false, searchable: false },
					 { targets: 1, "visible": true, "sortable": true },
					 // { targets: 2, "visible": true, "sortable": true },
					 { targets: 2, "visible": true, "sortable": true },
					 // { targets: 4, "visible": true, "sortable": true },
					 { targets: 3, "visible": true, "sortable": false, "className": "text-center" }
				 ], 
				 "columns": [ 
					 { "data": "tinyurlid", "name": "tinyurlid", "autoWidth": true },
					{ "data": "servicename", "name": "servicename", "autoWidth": true },
					// { "data": "actualurl", "name": "actualurl", "autoWidth": true },
					 { "data": "tinyurl", "name": "tinyurl", "autoWidth": true },
					 // { "data": "tinyurlcode", "name": "tinyurlcode", "autoWidth": true },
					 { 
							 "data": "datatablebuttonscode", render: function (data, type, full, row) { 
									 return data;
							 } 
					 } 
				 ] 
			 }); 
        });

    </script>
}




